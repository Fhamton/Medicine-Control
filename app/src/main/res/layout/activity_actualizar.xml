<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Actualizar">

    <EditText
            android:id="@+id/firstnameUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="44dp" app:layout_constraintTop_toTopOf="parent" android:hint="Nombre"/>
    <EditText
            android:id="@+id/firstnameUpdate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="23dp" app:layout_constraintTop_toBottomOf="@+id/firstnameUpdate"
            android:hint="Clasificacion"/>
    <EditText
            android:id="@+id/firstnameUpdate3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="25dp" app:layout_constraintTop_toBottomOf="@+id/firstnameUpdate2"
            android:hint="Aplicacion"/>
    <EditText
            android:id="@+id/firstnameUpdate5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="Precio" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/firstnameUpdate3" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.022"/>
</android.support.constraint.ConstraintLayout>