<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        tools:context=".Medicine" android:layout_width="match_parent">

    <TextView
            android:text="Nombre"
            android:layout_width="wrap_content"
            android:layout_height="159dp"
            android:id="@+id/tvnombre" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" app:layout_constraintEnd_toStartOf="@+id/tvClass"
            android:layout_marginEnd="30dp" android:fontFamily="sans-serif-condensed" android:textSize="18sp"/>
    <TextView
            android:text="Clasificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvClass" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp" android:layout_marginStart="31dp"
            app:layout_constraintStart_toEndOf="@+id/tvnombre" android:fontFamily="sans-serif-condensed"
            android:textSize="18sp"/>
    <TextView
            android:text="Aplicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvApli" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvClass" android:layout_marginStart="32dp"
            app:layout_constraintStart_toEndOf="@+id/tvnombre" android:fontFamily="sans-serif-condensed"
            android:textSize="18sp"/>
    <TextView
            android:text="Vencimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvVen" android:layout_marginStart="30dp"
            app:layout_constraintStart_toEndOf="@+id/tvnombre" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvApli" android:fontFamily="sans-serif-condensed"
            android:textSize="18sp"/>
    <TextView
            android:text="Precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPrecio" android:layout_marginStart="30dp"
            app:layout_constraintStart_toEndOf="@+id/tvnombre" android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/tvVen" android:fontFamily="sans-serif-condensed"
            android:textSize="18sp"/>
    <Button
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:id="@+id/btnAct"
            android:fontFamily="sans-serif-condensed" android:textSize="18sp"
            android:background="@drawable/actualizar" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="45dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"/>
    <Button
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:id="@+id/btnElim"
            android:fontFamily="sans-serif-condensed" android:textSize="18sp"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/btnAct" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" android:background="@drawable/eliminar"/>
</android.support.constraint.ConstraintLayout>