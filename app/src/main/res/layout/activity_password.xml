<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Password">

    <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextPass1"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="70dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="65dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="65dp" android:hint="Contraseña actual"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextPass2" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextPass1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="65dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="65dp" android:hint="Contraseña nueva"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextPass3" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextPass2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="65dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="65dp" android:hint="Repetir contraseña"/>
    <Button
            android:text="Aceptar"
            android:layout_width="115dp"
            android:layout_height="60dp"
            android:id="@+id/btnPass" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextPass3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="135dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="135dp" android:fontFamily="sans-serif-condensed" android:textSize="14sp"/>
</android.support.constraint.ConstraintLayout>